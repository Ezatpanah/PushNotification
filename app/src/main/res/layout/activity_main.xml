<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="www.Rojadev.ir" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btm_simno"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="1-Simple Notification" />

            <Button
                android:id="@+id/btn_penint"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="2-Pending Intent Notification" />

            <Button
                android:id="@+id/btn_ncolor"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="3-Notification With Color" />

            <Button
                android:id="@+id/btn_largicon"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="4-Notification With Larg Icon" />

            <Button
                android:id="@+id/btn_hedupnoti"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="5- Heads-Up Notification" />

            <Button
                android:id="@+id/btn_actionnotif"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="6-Notification With Action" />

            <Button
                android:id="@+id/btn_btnbigtext"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="7-Big Text Notification" />

            <Button
                android:id="@+id/btn_bigpictuer"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="8-BigPictuer Style Notification" />

            <Button
                android:id="@+id/btn_expandable"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="9- Expandable Notification" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
